vga_test(){       
       # Script for gamming system function test by EFCO Sam

VGA_LOG=/run/initramfs/memory/data/HW_test_script/tmp/vga.tmp
OUT=VGA-0
           . ./fail_red.lib           
           #---Check vga function
rm -r $VGA_LOG
xrandr --output $OUT --auto
clear
echo "Please Check $OUT output."
read -p "$OUT display work - [Enter], $OUT Fail - [N]" UYN
	if [ "$UYN" == "N" -o "$UYN" == "n" ]; 
	then
		clear
		fail_red
		echo "****** The $OUT test failed! ******" | tee -a $VGA_LOG
		read -p "Press any key to stop test." key
		kill -9 $? 
	else
		echo "****** The $OUT test passed! ******" | tee -a $VGA_LOG 
	fi
           }

