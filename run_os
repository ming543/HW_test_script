#			1)
#				
#				sudo sh $TEST_LOC/t.sh
#				exit 1 ;;
#		esac
#		;;
	*)
		clear
                echo "cd $TEST_LOC; sudo sh run_main.sh" > $TEST_LOC/t.sh
                sudo sh $TEST_LOC/t.sh
                exit 1
                ;;

esac



