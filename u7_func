	 PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS\
	 PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS\
	 PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS_PASS\
	 -------------------------------------------------\
	 \ZnPower off the system (Yes/No) 
        " 20 55

        #0=yes 1=no 255=Esc
        response=$?
        case $response in
                0) 
		   #echo "" >> $LOG_LOC/$SN_LOG.log
        	   echo "****** TEST_PASSED! ****** " >> $LOG_LOC/$SN_LOG.log
        	   mv $LOG_LOC/$SN_LOG.log $LOG_LOC/$SN_LOG-PASS.log
		   usb_log_sync
		   onedrive_log_sync
		   sync
		   poweroff
		exit 0;;
                1) 
		   #echo "" >> $LOG_LOC/$SN_LOG.log
        	   echo "****** TEST_PASSED! ****** " >> $LOG_LOC/$SN_LOG.log
        	   mv $LOG_LOC/$SN_LOG.log $LOG_LOC/$SN_LOG-PASS.log
		   usb_log_sync
		   onedrive_log_sync
		   echo "Back to shell" 
		exit 1;;
                255) 
		   #echo "" >> $LOG_LOC/$SN_LOG.log
        	   echo "****** TEST_PASSED! ****** " >> $LOG_LOC/$SN_LOG.log
        	   mv $LOG_LOC/$SN_LOG.log $LOG_LOC/$SN_LOG-PASS.log
		   usb_log_sync
		exit 255;;
        esac
}



